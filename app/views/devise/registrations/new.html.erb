<div class="container">
  <div class="login_box">
    <h2>Sign up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="session">
        <%= f.label :email %><br />
        <%= f.email_field :email,  class: 'session_form', placeholder: 'Email', autofocus: true %>
      </div>
    
      <div class="session">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password,  class: 'session_form', placeholder: 'Password', autocomplete: "off" %>
      </div>
    
      <div class="session">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: 'session_form', placeholder: 'Password_confirmation',  autocomplete: "off" %>
      </div>
    
      <div class="actions">
        <%= f.submit "Sign up", class: 'reg' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>

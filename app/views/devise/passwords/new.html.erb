<div class="container">
  <div class="login_box">
    <h2>Forgot your password?</h2>
    
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= devise_error_messages! %>
    
      <div class="session">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: 'session_form', placeholder: 'Email', autofocus: true %>
      </div>
    
      <div class="actions">
        <%= f.submit "Send me reset password instructions", class: 'reg' %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </div>
</div>